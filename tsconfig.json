{
 "exclude": [
    "node_modules",
    "dist"
    ],
    "include": ["src"],
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist/",
    "module": "commonjs",
    "target": "es2016",
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
   
    "strict": true,
    "skipLibCheck": true,
  }
}
